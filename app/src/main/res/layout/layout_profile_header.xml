<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="@drawable/profile_card_background"
    android:padding="20dp">

    <!-- Profile Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Avatar and Basic Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Profile Avatar -->
            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/imageViewAvatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/profile_avatar_background"
                    android:src="@drawable/ic_person" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/profile_avatar_border" />

            </FrameLayout>

            <!-- User Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <!-- Nickname and Edit Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textViewNickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="사용자명"
                        android:textColor="@color/primary_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="편집"
                        android:textColor="@color/brand_orange"
                        android:textSize="14sp"
                        android:minWidth="0dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="0dp"
                        android:background="@drawable/edit_button_background"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Rating and Join Date -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <!-- Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_star"
                            app:tint="@android:color/holo_orange_light" />

                        <TextView
                            android:id="@+id/textViewRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textColor="@color/brand_white_70"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                    <!-- Join Date -->
                    <TextView
                        android:id="@+id/textViewJoinDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가입일 23.09.16"
                        android:textColor="@color/brand_white_60"
                        android:textSize="12sp"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Self Introduction -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/intro_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기소개"
                android:textColor="@color/brand_white_70"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자기소개를 작성해주세요"
                android:textColor="@color/brand_white_60"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/stats_background"
            android:paddingVertical="20dp">

            <!-- Total Listings -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewTotalListings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 등록"
                    android:textColor="@color/brand_white_60"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/brand_white_20"
                android:layout_gravity="center" />

            <!-- Selling Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewSellingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="판매중"
                    android:textColor="@color/brand_white_60"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/brand_white_20"
                android:layout_gravity="center" />

            <!-- Sold Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewSoldCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="판매완료"
                    android:textColor="@color/brand_white_60"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Message Button (for other user's profile) -->
        <Button
            android:id="@+id/buttonSendMessage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="메시지 보내기"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/message_button_background"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
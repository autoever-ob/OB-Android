<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/product_card_background"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Product Image with Status Chip -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/product_image_background"
            android:src="@drawable/ic_car" />

        <!-- Status Chip Overlay -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매중"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/status_chip_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_margin="4dp"
            android:layout_gravity="top|start" />
    </FrameLayout>

    <!-- Product Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현대 포레스트 프리미엄"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Price -->
        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,000만원"
            android:textColor="@color/brand_orange"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

        <!-- First Row: 연식 | 주행거리 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <!-- 연식 -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="연식"
                    android:textColor="@color/brand_white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewGeneration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- 주행거리 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="주행거리"
                    android:textColor="@color/brand_white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewMileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000km"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row: 지역 | 등록일 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <!-- 지역 -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="지역"
                    android:textColor="@color/brand_white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강남구"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- 등록일 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="등록일"
                    android:textColor="@color/brand_white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09.16"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="매물 등록"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 차량 이미지 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차량 이미지"
                    android:textColor="@color/field_label"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textViewImageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/10"
                        android:textColor="@color/brand_white_60"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewImages"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewImageError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지를 추가해주세요"
                android:textColor="@color/error_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 제목 -->
        <LinearLayout
            android:id="@+id/titleInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background">

                <EditText
                    android:id="@+id/editTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="제목을 입력하세요"
                    android:textColorHint="@color/brand_white_60"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext" />

            </FrameLayout>

            <TextView
                android:id="@+id/textViewTitleError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목을 입력해주세요"
                android:textColor="@color/error_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 차량번호 -->
        <LinearLayout
            android:id="@+id/plateInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량번호"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background">

                <EditText
                    android:id="@+id/editTextPlateNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="예: 123가4567"
                    android:textColorHint="@color/brand_white_60"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true"
                    android:inputType="textCapCharacters"
                    android:imeOptions="actionNext" />

                <ImageView
                    android:id="@+id/plateValidationIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/textViewPlateError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="올바른 차량번호를 입력해주세요"
                android:textColor="@color/error_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 차량 종류 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 종류"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <Button
                    android:id="@+id/buttonVehicleType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="차량 종류 선택"
                    android:textColor="@color/brand_white_60"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@android:drawable/arrow_down_float"
                    app:tint="@color/brand_white_60" />

            </FrameLayout>

        </LinearLayout>

        <!-- 차량 브랜드/모델 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 브랜드/모델"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <Button
                    android:id="@+id/buttonVehicleModel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="차량 브랜드/모델 선택"
                    android:textColor="@color/brand_white_60"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@android:drawable/arrow_down_float"
                    app:tint="@color/brand_white_60" />

            </FrameLayout>

        </LinearLayout>

        <!-- 차량 연식 -->
        <LinearLayout
            android:id="@+id/generationInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 연식"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background">

                <EditText
                    android:id="@+id/editTextGeneration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="예: 2020년"
                    android:textColorHint="@color/brand_white_60"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true"
                    android:inputType="number" />

            </FrameLayout>

            <TextView
                android:id="@+id/textViewGenerationError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연식을 입력해주세요"
                android:textColor="@color/error_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 주행거리 -->
        <LinearLayout
            android:id="@+id/mileageInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주행거리 (km)"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background">

                <EditText
                    android:id="@+id/editTextMileage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="예: 50,000"
                    android:textColorHint="@color/brand_white_60"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true"
                    android:inputType="number" />

            </FrameLayout>

            <TextView
                android:id="@+id/textViewMileageError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주행거리를 입력해주세요"
                android:textColor="@color/error_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 판매가격 -->
        <LinearLayout
            android:id="@+id/priceInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매가격 (만원)"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background">

                <EditText
                    android:id="@+id/editTextPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="예: 3,000"
                    android:textColorHint="@color/brand_white_60"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true"
                    android:inputType="number" />

            </FrameLayout>

            <TextView
                android:id="@+id/textViewPriceError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격을 입력해주세요"
                android:textColor="@color/error_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 차량 옵션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 옵션"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <Button
                    android:id="@+id/buttonVehicleOptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="옵션을 선택하세요"
                    android:textColor="@color/brand_white_60"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@android:drawable/arrow_down_float"
                    app:tint="@color/brand_white_60" />

            </FrameLayout>

        </LinearLayout>

        <!-- 위치 -->
        <LinearLayout
            android:id="@+id/locationInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/styled_input_background">

                <EditText
                    android:id="@+id/editTextLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="예: 서울시 강남구"
                    android:textColorHint="@color/brand_white_60"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext" />

            </FrameLayout>

            <TextView
                android:id="@+id/textViewLocationError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치를 입력해주세요"
                android:textColor="@color/error_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 상세 설명 -->
        <LinearLayout
            android:id="@+id/descriptionInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 설명"
                android:textColor="@color/field_label"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/styled_input_background">

                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="차량에 대한 설명을 입력하세요"
                    android:textColorHint="@color/brand_white_60"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:imeOptions="actionDone" />

            </FrameLayout>

            <TextView
                android:id="@+id/textViewDescriptionError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설명을 입력해주세요"
                android:textColor="@color/error_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 등록 버튼 -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="매물 등록하기"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/styled_input_background"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialogContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/background_dark">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="24dp">

                    <!-- Empty space for balance -->
                    <View
                        android:layout_width="44dp"
                        android:layout_height="44dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/textViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="프로필 수정"
                            android:textColor="@color/brand_white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />


                    </LinearLayout>

                    <!-- Close Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="22dp"
                        app:cardBackgroundColor="@color/brand_white_10"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/buttonClose"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_close"
                            app:tint="@color/brand_white_90"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Content Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Profile Image Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <!-- Profile Image Container -->
                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp">

                            <!-- Profile Image -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                app:cardCornerRadius="40dp"
                                app:cardElevation="4dp">

                                <ImageView
                                    android:id="@+id/imageViewProfile"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_person"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </androidx.cardview.widget.CardView>

                            <!-- Camera overlay -->
                            <View
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background_white"
                                android:alpha="0.3" />

                            <!-- Camera icon -->
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_add_circle"
                                app:tint="@color/brand_white" />

                        </FrameLayout>

                        <!-- Status Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="프로필 사진 변경"
                            android:textColor="@color/brand_white_80"
                            android:textSize="12sp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Form Fields -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Nickname Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_person"
                                    app:tint="@color/brand_orange_80"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="닉네임"
                                    android:textColor="@color/brand_white_90"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" *"
                                    android:textColor="@color/red_80"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/editTextNickname"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:hint="닉네임을 입력하세요"
                                android:textColor="@color/brand_white"
                                android:textColorHint="@color/brand_white_50"
                                android:textSize="14sp"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp"
                                android:background="@drawable/ios_input_background"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Description Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_chevron_right"
                                    app:tint="@color/brand_orange_80"
                                    android:layout_marginEnd="8dp"
                                    android:rotation="90" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="자기소개"
                                    android:textColor="@color/brand_white_90"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/editTextDescription"
                                android:layout_width="match_parent"
                                android:layout_height="96dp"
                                android:hint="자기소개를 입력하세요"
                                android:textColor="@color/brand_white"
                                android:textColorHint="@color/brand_white_50"
                                android:textSize="14sp"
                                android:inputType="textMultiLine"
                                android:maxLines="5"
                                android:gravity="top|start"
                                android:padding="12dp"
                                android:background="@drawable/ios_input_background"
                                android:fontFamily="sans-serif" />

                            <!-- Character count -->
                            <TextView
                                android:id="@+id/textViewCharacterCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="0 / 500"
                                android:textColor="@color/brand_white_60"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Phone Number Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="32dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_phone"
                                    app:tint="@color/brand_orange_80"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="연락처"
                                    android:textColor="@color/brand_white_90"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/editTextPhoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:hint="010-1234-5678"
                                android:textColor="@color/brand_white"
                                android:textColorHint="@color/brand_white_50"
                                android:textSize="14sp"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp"
                                android:background="@drawable/ios_input_background"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Save Button -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSave"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="저장하기"
                            android:textColor="@color/brand_white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            app:backgroundTint="@color/brand_orange"
                            app:cornerRadius="8dp" />

                        <!-- Loading indicator -->
                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:indeterminateTint="@color/brand_white" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</FrameLayout>
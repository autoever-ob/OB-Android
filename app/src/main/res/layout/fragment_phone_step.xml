<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰 번호"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:alpha="0.9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/brand_orange"
                app:hintTextColor="@color/brand_orange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="휴대폰 번호 입력"
                    android:inputType="phone"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendCode"
                android:layout_width="100dp"
                android:layout_height="56dp"
                android:text="인증하기"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/brand_orange" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:alpha="0.9" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/brand_orange"
                app:hintTextColor="@color/brand_orange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVerificationCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="인증번호"
                    android:inputType="number"
                    android:maxLength="7"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivTimer"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    app:tint="@android:color/white"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="03:00"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:alpha="0.7" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvExpiredNotice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="인증 시간이 만료되었습니다. 재전송 후 다시 입력해주세요."
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:text="다음"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/brand_orange"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutDealer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="딜러 번호"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:alpha="0.9" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/brand_orange"
                app:hintTextColor="@color/brand_orange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDealerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="딜러 번호 입력"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDealerNext"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:text="다음"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@color/brand_orange"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
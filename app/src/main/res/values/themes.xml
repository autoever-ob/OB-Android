<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Campick" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_orange</item>
        <item name="colorPrimaryDark">@color/brand_background</item>
        <item name="colorAccent">@color/brand_orange</item>
        <item name="android:windowBackground">@color/brand_background</item>
        <item name="android:statusBarColor">@color/brand_background</item>
        <item name="android:navigationBarColor">@color/brand_background</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/brand_orange</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

